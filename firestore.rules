rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ملف المستخدم
    match /users/{userId} {
      allow read: if true;
      allow create, update: if request.auth != null && request.auth.uid == userId;
    }

    // الإعلانات
    match /ads/{adId} {
      allow read: if true;

      // إنشاء إعلان: فقط إذا كان المستخدم مسجل و userId يطابق معرفه
      allow create: if request.auth != null &&
                    request.auth.uid == request.resource.data.userId;

      // التحديث: يمكن للمالك تحديث أي شيء. يمكن للآخرين تحديث الإعجابات فقط.
      allow update: if request.auth != null && (
        // المالك يمكنه تحديث كل شيء
        request.auth.uid == resource.data.userId ||
        // المستخدمون الآخرون يمكنهم فقط تحديث عدد الإعجابات بزيادة أو نقصان 1
        (
          request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes']) &&
          (request.resource.data.likes == resource.data.likes + 1 || request.resource.data.likes == resource.data.likes - 1)
        )
      );

      // الحذف: فقط إذا كان صاحب الإعلان
      allow delete: if request.auth != null &&
                            request.auth.uid == resource.data.userId;
    }

    // التفاعلات مثل "مهتم"
    match /interests/{interestId} {
      allow read: if true;

      // إنشاء تفاعل: المستخدم المسجل فقط
      allow create: if request.auth != null &&
                    request.auth.uid == request.resource.data.userId;

      // حذف التفاعل: فقط إذا كان هو من أنشأه
      allow delete: if request.auth != null &&
                    request.auth.uid == resource.data.userId;
    }
  }
}
